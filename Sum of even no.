#include <iostream>

using namespace std;

int main()
{                                                           //I made to the logic at one click but missed some most important part to this such as 
                                                              I was accessing the index number instead of the elements 
    int n,sum=0;
    cin>>n;
    for(int i=0;i<n;i++)
    {
        int no;
        cin>>no;
        if(no%2==0)
        {
            sum=sum+no;
            //cout<<sum<<endl;
        }
    }
     cout<<sum<<endl;
    //return 0;
}
